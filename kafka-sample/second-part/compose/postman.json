{
  "info": {
    "_postman_id": "b1e2c345-6789-4321-abcd-1234567890ff",
    "name": "Books API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection for Producer & Consumer Book Services"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    }
  ],
  "item": [
    {
      "name": "Producer - Send Random Book",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/v1/books/send",
          "host": ["{{baseUrl}}"],
          "path": ["v1", "books", "send"]
        }
      }
    },
    {
      "name": "Producer - Generate Books",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/v1/books/generate/10",
          "host": ["{{baseUrl}}"],
          "path": ["v1", "books", "generate", "10"]
        }
      }
    },
    {
      "name": "Producer - Start Streaming",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/v1/books/stream/start?speed=100",
          "host": ["{{baseUrl}}"],
          "path": ["v1", "books", "stream", "start"],
          "query": [
            {
              "key": "speed",
              "value": "100"
            }
          ]
        }
      }
    },
    {
      "name": "Producer - Stop Streaming",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/v1/books/stream/stop",
          "host": ["{{baseUrl}}"],
          "path": ["v1", "books", "stream", "stop"]
        }
      }
    },
    {
      "name": "Consumer - Search Books",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/v1/books?page=0",
          "host": ["{{baseUrl}}"],
          "path": ["v1", "books"],
          "query": [
            {
              "key": "page",
              "value": "0"
            }
          ]
        }
      }
    },
    {
      "name": "Consumer - Find Book By ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/v1/books/id?book=1",
          "host": ["{{baseUrl}}"],
          "path": ["v1", "books", "id"],
          "query": [
            {
              "key": "book",
              "value": "1"
            }
          ]
        }
      }
    },
    {
      "name": "Consumer - Update Book",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Updated Title\",\n  \"author\": \"Updated Author\",\n  \"publishedDate\": \"2024-01-01\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/v1/books/1",
          "host": ["{{baseUrl}}"],
          "path": ["v1", "books", "1"]
        }
      }
    },
    {
      "name": "Consumer - Delete Book",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/v1/books/1",
          "host": ["{{baseUrl}}"],
          "path": ["v1", "books", "1"]
        }
      }
    }
  ]
}
